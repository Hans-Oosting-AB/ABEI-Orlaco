SELECT CONVERT(varchar, DATEPART(YEAR, F.ActualDate)) + '-' + RIGHT( '0' + CONVERT(varchar, DATEPART(ISO_WEEK, F.ActualDate)),2) AS WeekNr,
  RTRIM(F.[BuyerItem])+ 'EC' + RTRIM(F.[EngChangeLvl]) AS BuyerItem,
  MAX(ISNULL(A.debnr,'')) AS DebNr,
  MAX(ISNULL(A.ItemCode,'')) AS ItemCode, 
  SUM(F.[Quantity]) AS Quantity
FROM [DAF].[dbo].[PSForecast] F 
LEFT JOIN [400].[dbo].[_TIE_DAF_artikelnummers] A ON A.ItemCodeAccount Collate database_default = RTRIM(F.[BuyerItem])+ 'EC' + F.[EngChangeLvl]
WHERE F.[ActualDate] &gt; GETDATE()  ANd Status &lt;=2
GROUP BY  F.[BuyerItem], F.[EngChangeLvl] , 
    CONVERT(varchar, DATEPART(YEAR, F.ActualDate)) + '-' +  RIGHT( '0' + CONVERT(varchar, DATEPART(ISO_WEEK, F.ActualDate)),2)
